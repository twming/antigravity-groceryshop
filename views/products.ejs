<h1 style="text-align: center; margin-bottom: 2rem; color: var(--primary-color);">Our Products</h1>

<div class="product-grid">
    <% if (products.length===0) { %>
        <p style="text-align: center; grid-column: 1 / -1;">No products found in the gallery.</p>
        <% } %>
            <% products.forEach(product=> { %>
                <div class="product-card">
                    <img class="product-image" src="<%= product.image_data %>" alt="<%= product.name %>"
                        onerror="this.src='https://via.placeholder.com/300x200?text=Error'; this.onerror=null;">
                    <div class="product-info">
                        <div class="product-name">
                            <%= product.name %>
                        </div>
                    </div>
                </div>
                <% }); %>
</div>